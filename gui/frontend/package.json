{
  "name": "ai-assistant-desktop",
  "version": "1.6.70",
  "description": "AI Personal Assistant Desktop Application",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "fengkuangdeshitou",
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@types/node": "^16.18.0",
    "antd": "^5.28.1",
    "axios": "^1.13.2",
    "moment": "^2.30.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.2",
    "typescript": "^4.9.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "./scripts/build.sh",
    "build:original": "react-scripts build",
    "eject": "react-scripts eject",
    "prebuild": "node ../scripts/update-version.mjs",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "build-win": "npm run build && electron-builder --win",
    "build-win-portable": "npm run build && electron-builder --win --config.win.target[0].target=portable",
    "build-mac": "npm run build && electron-builder --mac",
    "build-linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "http-proxy-middleware": "^3.0.5",
    "react-scripts": "^5.0.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.ai-assistant.desktop",
    "productName": "AI私人助理",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "!node_modules/**/*",
      "!src/**/*",
      "!scripts/**/*",
      "!public/index.html",
      "!**/*.md",
      "!**/*.map",
      "!**/*.lock",
      "!**/.*"
    ],
    "asar": true,
    "compression": "maximum",
    "afterPack": "./scripts/optimize-build.js",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": "portable",
      "artifactName": "${version}.exe"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI私人助理"
    }
  }
}
